{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block body %}
<h2>{{ movie.title }}</h2>

<p>{{ movie.description|nl2br }}</p>
<p>Categorie : {{ movie.category|title }}</p>

<h3>Acteurs</h3>

{% if movie.actors|length>0 %}
<ul>
{% for actor in movie.actors %}
    <li>{{ actor.firstname }} {{ actor.lastname|upper }}</li>
{% endfor %}
</ul>
{% else %}
<p>Aucun acteur.</p>
{% endif %}

<p><a href="{{ path('app_movie') }}">Retour Ã  la liste</a></p>
{% endblock %}